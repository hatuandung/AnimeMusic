<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="@dimen/banner_size">

    <com.makeramen.roundedimageview.RoundedImageView
        android:id="@+id/banner_background"
        android:layout_width="match_parent"
        android:layout_height="@dimen/banner_size"
        android:scaleType="centerCrop"
        app:riv_corner_radius="@dimen/m_radius" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="@dimen/m_size"
        android:layout_marginEnd="@dimen/m_size"
        android:layout_marginBottom="@dimen/m_size"
        android:orientation="vertical">

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/s_size"
            android:text="Title"
            android:textColor="@color/text_title"
            android:textSize="@dimen/xxxl_text"
            android:textStyle="bold" />

        <Button
            android:layout_width="65dp"
            android:layout_height="wrap_content"
            android:layout_below="@+id/title"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:background="@drawable/bg_round_btn_light"
            android:text="New"
            android:textAllCaps="false"
            android:textColor="@color/text_title"
            android:textSize="@dimen/s_text" />
    </RelativeLayout>
</RelativeLayout>