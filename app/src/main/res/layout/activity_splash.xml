<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/anime_color"
        android:src="@drawable/ic_app_source" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/xxl_size"
        android:background="@color/anime_color"
        android:fontFamily="@font/font_naruto"
        android:text="Anime is love. Anime is life"
        android:textColor="@color/text_title"
        android:textSize="@dimen/xxl_text"
        android:textStyle="bold"
        android:visibility="gone" />

    <com.github.ybq.android.spinkit.SpinKitView
        android:id="@+id/mini_loading"
        style="@style/SpinKitView.Large.CubeGrid"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center"
        android:layout_marginBottom="@dimen/l_size"
        android:animateLayoutChanges="true"
        android:background="@color/anime_color"
        android:padding="5dp"
        app:SpinKit_Color="#fff" />
</RelativeLayout>