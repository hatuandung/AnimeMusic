<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AppTabLayout">
        <item name="tabIndicatorColor">@color/ripple</item>
        <item name="tabSelectedTextColor">@color/text_title</item>
        <item name="tabTextAppearance">@style/AppTabTextAppearance</item>
    </style>

    <style name="AppTabTextAppearance">
        <item name="android:textSize">@dimen/l_text</item>
        <item name="android:textColor">@color/text_desc</item>
        <item name="tabSelectedTextColor">@color/text_title</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="MySeekBarTheme">
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="DialogStyle">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowIsFloating">false</item>
        <item name="android:windowSoftInputMode">adjustUnspecified|stateHidden</item>
        <item name="colorPrimaryDark">@android:color/transparent</item>
    </style>

    <style name="dialog_animation_fade">
        <item name="android:windowEnterAnimation">@anim/dialog_fade_in</item>
        <item name="android:windowExitAnimation">@anim/dialog_fade_out</item>
    </style>

    <style name="ToolbarTheme">
        <item name="android:textColorPrimary">@android:color/white</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="colorAccent">@android:color/white</item>
        <item name="colorControlNormal">@android:color/white</item>
        <item name="colorPrimary">@android:color/white</item>
        <item name="colorPrimaryDark">@android:color/white</item>
    </style>

    <style name="SearchViewTheme">
        <item name="android:textColorSecondary">@color/search_hint</item>
        <item name="android:textColorHint">@color/search_hint</item>
        <item name="android:popupBackground">@null</item>
        <item name="android:editTextColor">@color/search_hint</item>
        <item name="colorAccent">@color/search_hint</item>
    </style>

    <style name="AppTheme">
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:navigationBarColor">#050505</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.SplashScreen">
        <item name="android:background">@color/colorPrimary</item>
    </style>


</resources>